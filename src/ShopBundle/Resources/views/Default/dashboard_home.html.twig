{% extends 'admin_panel.html.twig' %}

{% block admin_block_title %} Dashboard {% endblock %}

{% block admin_body %}
    <div class="row">
        <div class="col-md-4">
            <div class="card" id="user_card">
                <div class="card-header" >
                    <span style="font-size: 3rem"><i class="fas fa-users"></i></span>
                    <span class="float-right"><span class="d-block dashboard-number-item">10</span> New Users</span>
                </div>
                <div class="card-footer dashboard-card">
                    <a href="{{ path('home_page') }}">View more details <span class="dashboard-read-more-icon"><i class="fas fa-arrow-circle-right"></i></span></a>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card" id="product_card">
                <div class="card-header" >
                    <span style="font-size: 3rem"><i class="fas fa-cart-plus"></i></span>
                    <span class="float-right"><span class="d-block dashboard-number-item">10</span> New Products</span>
                </div>
                <div class="card-footer dashboard-card">
                    <a href="{{ path('home_page') }}">View more details <span class="dashboard-read-more-icon"><i class="fas fa-arrow-circle-right"></i></span></a>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card" id="order_card">
                <div class="card-header" >
                    <span style="font-size: 3rem"><i class="fas fa-dollar-sign"></i></span>
                    <span class="float-right"><span class="d-block dashboard-number-item">10</span>New Orders</span>
                </div>
                <div class="card-footer dashboard-card">
                    <a href="{{ path('home_page') }}">View more details <span class="dashboard-read-more-icon"><i class="fas fa-arrow-circle-right"></i></span></a>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-8">
            <div class="jumbotron">
                <canvas id="myChart" height="120"></canvas>
            </div>

        </div>
        <div class="col-md-4"></div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <!-- Graphs -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
    <script>
        var currentTime = new Date();

        // returns the month (from 0 to 11)
        var month = currentTime.getMonth() + 1;

        // returns the day of the month (from 1 to 31)
        var day = currentTime.getDate();
        var ctx = document.getElementById("myChart");
        console.log(day);
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: Array.from(Array(day), (e,i)=>i+1),
                datasets: [{
                    data: [15, 21, 18, 24, 23, 24, 12],
                    lineTension: 0,
                    backgroundColor: 'transparent',
                    borderColor: '#007bff',
                    borderWidth: 4,
                    pointBackgroundColor: '#007bff'
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: false
                        }
                    }]
                },
                legend: {
                    display: false,
                }
            }
        });

    </script>
{% endblock %}
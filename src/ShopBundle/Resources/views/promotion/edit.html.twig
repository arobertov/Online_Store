{% extends 'admin_panel.html.twig' %}

{% block admin_block_title %}
    Edit promotion
{% endblock %}

{% block admin_body %}
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <ul id="nav_product" class="nav nav-tabs">
                <li class="nav-item active">
                    <a class="nav-link " href="{{ path('promotion_index') }}">List all promotions</a>
                </li>
            </ul>
            <div class="jumbotron">
                {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
                {{ form_end(edit_form) }}
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $('#promotions-menu-link').tab('show');
        });
    </script>
{% endblock %}

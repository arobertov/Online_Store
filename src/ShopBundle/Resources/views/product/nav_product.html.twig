
<ul id="nav_product" class="nav nav-tabs">
    <li class="nav-item">
        <a id="new_product_tab" class="nav-link " href="{{ path('create_product') }}" >New Product</a>
    </li>
    <li class="nav-item dropdown">
        <a id="all_products_tab" class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Preview products</a>
        <div class="dropdown-menu">
            <a class="dropdown-item" href="{{ path('list_all_products') }}">All products</a>
            {% if categories is defined %}
                {% for category in categories %}

                    {% if category.parent %}
                        <a class="dropdown-item" href="{{ path('list_all_products') }}?category={{category.slug  }}"><i data-feather="chevron-right"></i>{{ category.title }}</a>
                        {% else %}
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">{{ category.title }}</a>
                            <div class="dropdown-divider"></div>
                    {% endif %}

                {% endfor %}
            {% endif %}
        </div>
    </li>
</ul>

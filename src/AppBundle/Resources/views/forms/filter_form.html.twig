<div class="filter-form inline">
{{ form_start(filterForm,{'attr':{'class':'form-inline'}}) }}
    <div class="form-group mb-2">
        {{ form_widget(filterForm.filterField,{'attr':{'class':'form-control form-control-sm'}}) }}
    </div>
    <div class="form-group mb-2">
        {{ form_widget(filterForm.filterValue,{'attr':{'class':'form-control form-control-sm'}}) }}
    </div>
    <div class="form-group mb-2">
        <button type="submit" class="btn btn-outline-info inline btn-sm">Filter</button>
    </div>
{{ form_end(filterForm) }}
</div>

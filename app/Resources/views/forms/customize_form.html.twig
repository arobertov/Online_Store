{% extends 'bootstrap_4_horizontal_layout.html.twig' %}



{% block checkbox_widget %}
    {% spaceless %}
        <label class="form-check-label col-sm-2" {% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>
            {{ label }}
        </label>
        <input class="form-check-input " type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
    {% endspaceless %}
{% endblock checkbox_widget %}

{% block checkbox_row %}
    {% spaceless %}
         <div class="form-check">
             {{ form_errors(form) }}
             {{ form_widget(form) }}
         </div>
    {% endspaceless %}
{% endblock checkbox_row %}

{% block form_label %}
    {{ parent() }}

    {% if required %}
        <style>
            label.required:after{
                content: " * ";
                color: red;
            }
        </style>
    {% endif %}
{% endblock %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
                <div class="alert alert-block alert-danger" role="alert">
                    <button type="button" class="close" data-dismiss="alert">Ã—</button>
                    <p><strong>{{ error.message }}</strong></p>
                </div>
            {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% block submit_row -%}
    <div class="submit_row col-sm-10 offset-sm-4">
        {{- form_widget(form,{'attr':{'class':'btn  btn-success'}}) -}}
    </div>
{%- endblock submit_row %}


{% block form_widget_simple %}
    {{ parent() }}

    {% if help is defined %}
        <span class="text-warning">{{ help }}</span>
    {% endif %}
{% endblock %}